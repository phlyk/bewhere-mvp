# BeWhere MVP Environment Configuration

# =============================================================================
# Database (PostgreSQL + PostGIS)
# =============================================================================
POSTGRES_USER=bewhere
POSTGRES_PASSWORD=bewhere_dev
POSTGRES_DB=bewhere
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full connection string (for application use)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# API Service
# =============================================================================
NODE_ENV=development
API_PORT=3000
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# External APIs
# =============================================================================
MAPBOX_API_TOKEN="secret_token_here"

# =============================================================================
# ETL Service
# =============================================================================
# Cache directory for downloaded files
ETL_CACHE_DIR=./cache

# Maximum age of cached files (milliseconds, default 7 days)
ETL_CACHE_MAX_AGE=604800000

# Request timeout for downloads (milliseconds)
ETL_REQUEST_TIMEOUT=30000

# Maximum retries for failed requests
ETL_MAX_RETRIES=3

# Batch size for database inserts
ETL_BATCH_SIZE=1000

# Dry run mode (validate without loading data)
ETL_DRY_RUN=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info